\ProvidesFile{X2PTSerif-TLF.fd}
    [2011/02/21 Font definitions for X2/PTSerif-TLF.]

\expandafter\ifx\csname PTSerif@scale\endcsname\relax
    \let\PTSerif@@scale\@empty
\else
    \edef\PTSerif@@scale{s*[\csname PTSerif@scale\endcsname]}%
\fi
    
\DeclareFontFamily{X2}{PTSerif-TLF}{}

\DeclareFontShape{X2}{PTSerif-TLF}{m}{n}{
            <->     \PTSerif@@scale PTSerif-Regular-tlf-x2
}{}

\DeclareFontShape{X2}{PTSerif-TLF}{m}{it}{
            <->     \PTSerif@@scale PTSerif-Italic-tlf-x2
}{}

\DeclareFontShape{X2}{PTSerif-TLF}{b}{n}{
            <->     \PTSerif@@scale PTSerif-Bold-tlf-x2
}{}

\DeclareFontShape{X2}{PTSerif-TLF}{b}{it}{
            <->     \PTSerif@@scale PTSerif-BoldItalic-tlf-x2
}{}


\DeclareFontShape{X2}{PTSerif-TLF}{m}{ui}{
            <->     \PTSerif@@scale PTSerif-UprightItalic-tlf-x2
}{}

\DeclareFontShape{X2}{PTSerif-TLF}{m}{sl}{
            <->     \PTSerif@@scale PTSerif-Slanted-tlf-x2
}{}

\DeclareFontShape{X2}{PTSerif-TLF}{b}{ui}{
            <->     \PTSerif@@scale PTSerif-BoldUprightItalic-tlf-x2
}{}

\DeclareFontShape{X2}{PTSerif-TLF}{b}{sl}{
            <->     \PTSerif@@scale PTSerif-BoldSlanted-tlf-x2
}{}


\DeclareFontShape{X2}{PTSerif-TLF}{bx}{n}{<->ssub * PTSerif-TLF/b/n}{}
\DeclareFontShape{X2}{PTSerif-TLF}{bx}{it}{<->ssub * PTSerif-TLF/b/it}{}
\DeclareFontShape{X2}{PTSerif-TLF}{bx}{ui}{<->ssub * PTSerif-TLF/b/ui}{}
\DeclareFontShape{X2}{PTSerif-TLF}{bx}{sl}{<->ssub * PTSerif-TLF/b/sl}{}

\endinput
