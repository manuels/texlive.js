\def\currfile@checkpath{%
    \openin\@inputcheck\@filef@und\relax
    \ifeof\@inputcheck
        \expandafter\@tfor
        \expandafter\@tempb
        \expandafter:\expandafter=\input@path\do{%
            \openin\@inputcheck\@tempb\@filef@und\relax
            \ifeof\@inputcheck\else
                \edef\@filef@und{\@tempb\@filef@und}%
                \@break@tfor
            \fi
        }%
    \fi
    \closein\@inputcheck
}
