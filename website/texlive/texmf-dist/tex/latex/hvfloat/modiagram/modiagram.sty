                    { down }
                      {
                        \MOdiagram_draw:f
                          { -left~to,semithick , \l_MOdiagram_electron_color_tl }
                          (\l_MOdiagram_AO_down_electron_tl*\l_MOdiagram_AO_width_dim,.4*\l_MOdiagram_AO_width_dim)
                          -- ++(0,-.8*\l_MOdiagram_AO_width_dim) ;
                      }
                    { pair }
                      {
                        \MOdiagram_draw:f
                          { -left~to,semithick , \l_MOdiagram_electron_color_tl }
                          (\l_MOdiagram_AO_up_electron_tl*\l_MOdiagram_AO_width_dim,-.4*\l_MOdiagram_AO_width_dim)
                          -- ++(0,.8*\l_MOdiagram_AO_width_dim) ;
                        \MOdiagram_draw:f
                          { -left~to,semithick , \l_MOdiagram_electron_color_tl }
                          (\l_MOdiagram_AO_down_electron_tl*\l_MOdiagram_AO_width_dim,.4*\l_MOdiagram_AO_width_dim)
                          -- ++(0,-.8*\l_MOdiagram_AO_width_dim) ;
                      }
                  }
                  {}
              }
          } ;
      \endtikzpicture
    \group_end:
  }
