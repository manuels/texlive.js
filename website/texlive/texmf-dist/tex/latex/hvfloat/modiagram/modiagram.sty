    \tl_set:Nn \l_MOdiagram_AO_one_s_electron_tl { #2 }
  }

% display 1s orbital
\cs_new_nopar:Npn \MOdiagram_one_s:
  {
    \bool_if:NT \l_MOdiagram_atom_one_s_bool
      {
        \bool_if:NTF \l_MOdiagram_atom_left_bool
          {
            \dim_set_eq:NN
              \l_MOdiagram_atom_xshift_dim
              \l_MOdiagram_left_atom_position_dim
            \dim_set_eq:NN
              \l_MOdiagram_atom_left_one_s_dim
              \l_MOdiagram_atom_one_s_dim
            \bool_set_true:N \l_MOdiagram_one_s_left_bool
          }
          {
            \dim_set:Nn \l_MOdiagram_atom_xshift_dim
              {
                \l_MOdiagram_left_atom_position_dim
                  + \l_MOdiagram_inter_atom_distance_dim
              }
            \dim_set_eq:NN
              \l_MOdiagram_atom_right_one_s_dim
              \l_MOdiagram_atom_one_s_dim
            \bool_set_true:N \l_MOdiagram_one_s_right_bool
          }
        \MOdiagram_energy_range:N \l_MOdiagram_atom_one_s_dim
        \MOdiagram_node:n { inner~sep=0 , outer~sep=0 }
          (1s
            \bool_if:NTF \l_MOdiagram_atom_left_bool
              { left }
              { right }
          )
          at ( \l_MOdiagram_atom_xshift_dim , \l_MOdiagram_atom_one_s_dim )
          {
            \bool_if:NTF \l_MOdiagram_atom_left_bool
              {
                \MOdiagram_get_electron_color:n { 1sleft }
                \MOdiagram_get_electron_up:n { 1sleft }
                \MOdiagram_get_electron_down:n { 1sleft }
              }
              {
                \MOdiagram_get_electron_color:n { 1sright }
                \MOdiagram_get_electron_up:n { 1sright }
                \MOdiagram_get_electron_down:n { 1sright }
              }
            \MOdiagram_AO:ff
              { \tl_use:N \l_MOdiagram_AO_one_s_electron_tl }
              { \tl_use:N \l_MOdiagram_electron_current_color_tl }
          } ;
        \bool_if:NTF \l_MOdiagram_atom_left_bool
          { \MOdiagram_get_orbital_label:n { 1s left } }
          { \MOdiagram_get_orbital_label:n { 1s right } }
      }
  }

