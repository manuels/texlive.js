\def\W_maybe_newitem{% 
  \W_restore_space
  \ifx\@let@token\W_itemsymbol 
    \expandafter \W_gobbling_item 
  \else 
    \ifx\@let@token\W_restore_space 
    \else 
      \ifx\@let@token\W_list_activereturn 
        \par 
      \else
        \edef\W_next{\noexpand\end{\@currenvir}}%
        \W_next
      \fi
    \fi
  \fi}
