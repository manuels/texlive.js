			\upm@spec@lang@modifier@out%
		}{
		\ifthenelse{\equal{#1}{inout}}{%
			%inout
			\upm@spec@lang@modifier@inout%
		}{
			%in
			\upm@spec@lang@modifier@in%
		}}
	}%
}

